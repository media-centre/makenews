  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm test"
    }
  },
  "lint-staged": {
    "*{.js,jsx}": [
      "eslint --fix"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    ".idea",
    "dist",
    ".nyc_output",
    "coverage"
  ],
  "mocha": {
    "require": [
      "babel-register"
    ],
    "spec": [
      "client/test/helper/*.js",
      "server/test/helpers/*.js",
      "client/test/**/*.js",
      "client/test/**/*.jsx",
      "common/test/**/*.js",
      "server/test/**/*.js"
    ]
  },
  "nyc": {
    "exclude": [
      "client/test/**/*.js",
      "common/test/**/*.js",
      "server/test/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
